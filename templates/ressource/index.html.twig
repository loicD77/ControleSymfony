{% extends 'base.html.twig' %}

{% block title %}Ressources index{% endblock %}

{% block body %}
    <h1>Ressources index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Intitulé</th>
                <th>Présentation</th>
                <th>Support</th>
                <th>Nature</th>
                <th>Urldoc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ressource in ressources %}
            <tr>
                <td>{{ ressource.id }}</td>
                <td>{{ ressource.Intitulé }}</td>
                <td>{{ ressource.Présentation }}</td>
                <td>{{ ressource.Support ? ressource.Support|json_encode : '' }}</td>
                <td>{{ ressource.Nature ? ressource.Nature|json_encode : '' }}</td>
                <td>{{ ressource.urldoc }}</td>
                <td>
                    <a href="{{ path('app_ressource_show', {'id': ressource.id}) }}">show</a>
                    <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ressource_new') }}">Create new</a>
{% endblock %}
