{% extends 'base.html.twig' %}

{% block title %}Etapes index{% endblock %}

{% block body %}
    <h1>Etapes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descriptif</th>
                <th>Consignes</th>
                <th>Position</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etape in etapes %}
            <tr>
                <td>{{ etape.id }}</td>
                <td>{{ etape.Descriptif }}</td>
                <td>{{ etape.Consignes }}</td>
                <td>{{ etape.Position }}</td>
                <td>
                    <a href="{{ path('app_etapes_show', {'id': etape.id}) }}">show</a>
                    <a href="{{ path('app_etapes_edit', {'id': etape.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etapes_new') }}">Create new</a>
{% endblock %}
